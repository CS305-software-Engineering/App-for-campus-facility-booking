  <!-- add new classroom  modal  -->
  <div class="row justify-content-center">
    <% for(let classroom of classroomArray) { %>
      <div class="card border-info mb-3" style="max-width: 18rem;margin:17px;padding:0px">
        <div class="card-header">
          <%= classroom.Name %>
        </div>
        <div class="card-body text-dark">
          <h5 class="card-title">
            <%=classroom.BuildingName%>
          </h5>
          <p class="card-text">Strength : <%=classroom.Strength%>
          </p>
          <a href="/classrooms/edit/<%= classroom.Name%>/editthis" style="width:50%"
            class="btn btn-outline-primary">Edit</a>
          <form style="display: inline;" action="/classrooms/edit/<%= classroom.Name %> " method="POST">
            <button href="" style="width:48%" class="btn btn-outline-danger">Delete</button>
          </form>

        </div>
      </div>

      <% } %>
  </div>
  <!-- modal button -->






  <!-- modal -->
  <div class="modal fade modal-dialog" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Form</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="classroom_edit_id">
            <div class="mb-3">
              <label for="formGroupExampleInput" class="form-label">Building Name</label>
              <input type="text" class="form-control" id="buildingname1" placeholder="Enter Building Name">
            </div>
            <div class="mb-3">
              <label for="formGroupExampleInput2" class="form-label">Department</label>
              <input type="text" class="form-control" id="department1" placeholder="Department">
            </div>
            <div class="mb-3">
              <label for="formGroupExampleInput3" class="form-label">Classroom Name</label>
              <input type="text" class="form-control" id="classroom-name1" placeholder="Classroom Name">
            </div>

            <div class="mb-3">
              <label for="formGroupExampleInput4" class="form-label">strength</label>
              <input type="text" class="form-control" id="strength1" placeholder="Strength">
            </div>


            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button id="button2" class="btn btn-primary"><i class="fas fa-plus"></i>Save</button>

          </form>
        </div>

      </div>
    </div>
  </div>






