                            <input type="text" name="Name" class="form-control" id="classroom-name"
                                placeholder="Classroom Name">
                        </div>

                        <div class="mb-3">
                            <label for="formGroupExampleInput4" class="form-label">strength</label>
                            <input type="text" name="Strength" class="form-control" id="strength"
                                placeholder="Strength">
                        </div>

                       
                        <button  id = "button1" class="btn btn-primary"><i class ="fas fa-plus"></i>Save</button>
                      
